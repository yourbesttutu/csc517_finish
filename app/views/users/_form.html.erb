<div class="container">
  <div class="row">

    <div class="col-xs-8">
      <div class="row">
        <div class="col-xs-8">
          <div class="row">

            <%= form_for(@user, :html => {:class => "form-horizontal center"} ) do |f| %>
              <% if @user.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
            
                  <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              
              <div class="field">
                <div class="row">
                  <%= f.label :name, class: "control-label" %>
                  <%= f.text_field :name, class: "form-control" %><br />
                </div>
              </div>
              <div class="field">
                <div class="row">
                    <%= f.label :email, class: "control-label" %>
                  <%= f.text_field :email, class: "form-control" %><br />
                </div>
              </div>
              <div class="field">
                <div class="row">
                  <%= f.label :password, class: "control-label" %>
                  <%= f.text_field :password, class: "form-control" %><br />
                </div>
              </div>
              
              <hr style="border:3 double #987cb9" width="80%" color=#987cb9 SIZE=3>

                <%= link_to new_user_path, class: 'btn btn-success', id: "span_create_user" do %>
                  <i class="glyphicon glyphicon-plus"></i> Create
                <% end %>
              
            <% end %>
          </div><!-- div for row -->
        </div><!-- div for col-xs-8 -->
      </div>
  </div>
</div>