<div class="container">
  <div class="row">
    <div class="col-xs-5"></div>
    <div class="col-xs-7">
      <div class="row">
        <div class="col-xs-4">
          <div class="row">
          </div>
        </div>
        
        <div class="col-xs-8">
          <div class="row">
            
            <%= form_for(:session, url: login_path, :html => {:class => "form-horizontal center"}) do |f| %>
              <div class="row">
                <div class="form-group col-lg-8">
                    <%= f.label :email, class: "control-label"%>
                    <%= f.text_field :email, class:"form-control"%>
                </div>
              </div>
              
              <div class="row">
                <div class="form-group col-lg-8">
                    <%= f.label :password, class: "control-label"%>
                    <%= f.password_field :password, class:"form-control" %>
                </div>
              </div>
              
              <div class="row">
                <div class="form-group col-lg-8">
                    <%= f.submit 'Login', class: 'btn btn-default' %>
                    <%= link_to 'Regist', users_regist_path, class: 'btn btn-default' %>
                </div>
              </div>
            <% end %><!-- form end -->

          </div><!-- div for row -->
        </div><!-- div for col-xs-8 -->
      </div>
    </div>
  </div>
</div>


