<div class="container">
  <div class="row">

    <div class="col-xs-8">
      <div class="row">
        <div class="col-xs-8">
          <div class="row">
            <%= form_for(@history, :html => {:class => "form-horizontal center"} ) do |f| %>
              <% if @history.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@history.errors.count, "error") %> prohibited this history from being saved:</h2>
            
                  <ul>
                  <% @history.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
            
              <div class="field">
                <%= f.label :userid, class: "control-label" %><br>
                <%= f.text_field :userid, class: "form-control" %>
              </div>
              <div class="field">
                <%= f.label :bookid, class: "control-label" %><br>
                <%= f.text_field :bookid, class: "form-control" %>
              </div>
              <div class="field">
                <%= f.label :checkouttime, class: "control-label" %><br>
                <%= f.text_field :checkouttime, class: "form-control" %>
              </div>
              <div class="field">
                <%= f.label :returntime, class: "control-label" %><br>
                <%= f.text_field :returntime, class: "form-control" %>
              </div>
              <div class="actions">
                <%= f.submit %>
              </div>
            <% end %>
          </div><!-- div for row -->
        </div><!-- div for col-xs-8 -->
      </div>
  </div>
</div>